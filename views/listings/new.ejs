<% layout('/layouts/boilerplate') -%>
<body>
    <div class="row mt-3">
        <div  class="col-8 offset-2">
    <h3>Create New Listing</h3>

    <form method="POST" action="/listings">
        <div class="mb-3">
            <label for="title" class="form-label">Title:</label>
            <input required type="text" name="listing[title]" placeholder="Add c catchy title" class="form-control">
        </div>
       
        <div class="mb-3">
            <label for="description" class="form-label">Description:</label>
            <textarea required name="listing[description]" class="form-control"></textarea>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Image link:</label>
            <input type="text" name="listing[image.url]" placeholder="enter URL/Link" class="form-control">  
        </div>

        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price:</label>
                <input type="number" required name="listing[price]" placeholder="1200" class="form-control">
              </div>
                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">Country:</label>
                    <input required type="text" name="listing[country]" placeholder="Pakistan" class="form-control">
                </div>

        </div>
       
      
        <div class="mb-3">
            <label for="location" class="form-label">Location:</label>
            <input type="text" name="listing[location]" placeholder="Dadu,Sindh" class="form-control">
        </div>
        
        <input class="btn btn-dark add-btn mt-3" type="submit" value="Add">
    </form>
    <br><br>

</div>
</div>
</body>
